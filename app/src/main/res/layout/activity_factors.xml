<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_factors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newsha.decisonmaker.Factors">

    <RelativeLayout
        android:id="@+id/activity_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.newsha.decisonmaker.Options"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Factor 4:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/etOption4"
            android:layout_toLeftOf="@+id/etOption4"
            android:layout_toStartOf="@+id/etOption4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:text="Factor 5:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/etOption5"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_toLeftOf="@+id/etOption4"
            android:layout_toStartOf="@+id/etOption4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:text="Factor 2:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/etOption2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOption3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignRight="@+id/etOption2"
            android:layout_alignEnd="@+id/etOption2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="28dp"
            android:id="@+id/etOption1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView3"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOption2"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/textView4"
            android:layout_alignRight="@+id/etOption1"
            android:layout_alignEnd="@+id/etOption1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOption4"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/etOption3"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignRight="@+id/etOption3"
            android:layout_alignEnd="@+id/etOption3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOption5"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/textView7"
            android:layout_alignRight="@+id/etOption4"
            android:layout_alignEnd="@+id/etOption4" />

        <TextView
            android:text="Factor 3:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:text="add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etOption5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:id="@+id/btnOptions" />

        <TextView
            android:text="@string/factor_page_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar5"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_above="@+id/btnOptions"
            android:layout_toRightOf="@+id/etOption5"
            android:layout_toEndOf="@+id/etOption5" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_above="@+id/etOption2"
            android:layout_toRightOf="@+id/etOption1"
            android:layout_toEndOf="@+id/etOption1" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar4"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_above="@+id/etOption5"
            android:layout_toRightOf="@+id/etOption4"
            android:layout_toEndOf="@+id/etOption4" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar3"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_above="@+id/etOption4"
            android:layout_toRightOf="@+id/etOption3"
            android:layout_toEndOf="@+id/etOption3" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_alignBottom="@+id/etOption2"
            android:layout_toRightOf="@+id/etOption2"
            android:layout_toEndOf="@+id/etOption2" />

        <TextView
            android:text="Factor 1:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_alignBottom="@+id/etOption1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</RelativeLayout>
